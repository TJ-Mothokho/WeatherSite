@model WeatherSite.Models.City;
@{
    ViewData["Title"] = "Real Time Weather";
}

<div>
    @using (Html.BeginForm("Details", "RealTimeWeather", FormMethod.Post))
    {
        <div class="row g-3">
            <div class="col-auto">
                <label for="lblCity" class="form-label">Enter City Name:</label>
            </div>
            <div class="col-auto">
                <input type="text" class="form-control" id="inputCity" name="CityName" placeholder="e.g. Paris">
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Search</button>
            </div>
        </div>
    }
</div>
